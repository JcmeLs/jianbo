<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.RegisterActivity">

    <include layout="@layout/activity_tool_bar"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/et_reg_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入你的用户名"
            app:met_baseColor="#2c3e50"
            app:met_clearButton="true"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelText="用户名："
            app:met_floatingLabelTextSize="14sp"
            app:met_helperText=" "
            app:met_helperTextAlwaysShown="true"
            app:met_iconLeft="@drawable/ic_person_grey600_36dp"
            app:met_primaryColor="#3498db"
            app:met_underlineColor="#3498db" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/et_reg_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入你的注册邮箱"
            app:met_baseColor="#2c3e50"
            app:met_clearButton="true"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelText="邮箱："
            app:met_floatingLabelTextSize="14sp"
            app:met_helperText=" "
            app:met_helperTextAlwaysShown="true"
            app:met_iconLeft="@drawable/ic_email_grey600_36dp"
            app:met_primaryColor="#3498db"
            app:met_underlineColor="#3498db" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/et_reg_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入你的密码"
            android:inputType="textPassword"
            app:met_baseColor="#2c3e50"
            app:met_clearButton="true"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelText="密码：（仅数字、字母）"
            app:met_floatingLabelTextSize="14sp"
            app:met_iconLeft="@drawable/ic_lock_grey600_36dp"
            app:met_maxCharacters="20"
            app:met_minCharacters="6"
            app:met_primaryColor="#3498db"
            app:met_underlineColor="#3498db" />



    </LinearLayout>

    <Button
        android:id="@+id/btn_reg_register"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="16dp"
        android:background="#3498db"
        android:gravity="center"
        android:text="立即注册"
        android:textColor="#ffffff"
        android:textSize="18sp" />
</LinearLayout>
